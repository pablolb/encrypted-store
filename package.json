{
  "name": "@mrbelloc/encrypted-store",
  "version": "2.1.0",
  "description": "Encrypted document storage with change detection using PouchDB and AES-256-GCM",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "build": "tsc --project tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepare": "husky"
  },
  "keywords": [
    "encryption",
    "storage",
    "pouchdb",
    "couchdb",
    "offline-first",
    "sync"
  ],
  "author": "Pablo de Le√≥n Belloc <pablolb@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pablolb/encrypted-store.git"
  },
  "homepage": "https://github.com/pablolb/encrypted-store#readme",
  "bugs": {
    "url": "https://github.com/pablolb/encrypted-store/issues"
  },
  "files": [
    "dist",
    "!dist/**/__tests__",
    "README.md"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/pouchdb": "^6.4.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "pouchdb": "^8.0.1",
    "pouchdb-adapter-memory": "^8.0.1",
    "prettier": "^3.7.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "pouchdb-browser": "^8.0.1"
  },
  "peerDependencies": {
    "pouchdb-browser": "^8.0.1",
    "events": "^3.3.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write"
    ]
  }
}
